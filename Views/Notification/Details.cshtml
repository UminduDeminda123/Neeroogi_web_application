            color: #434245;
        }

        .noticontainer {
            margin: 0px auto;
            max-width: 80%;
            border-radius: 4px;
        }

        .noticontainer-new {
            font-size: 0px;
            text-align: left;
            direction: ltr;
            display: inline-block;
            vertical-align: top;
            width: 100%;
        }



        .success-table {
            background: #D3FBD8;
            background-color: #D3FBD8;
            width: 100%;
            border-radius: 4px;
        }

        .success-table-button {
            display: inline-block;
            background: #307007;
            color: #D3FBD8;
            font-size: 14px;
            font-weight: bold;
            line-height: 30px;
            margin: 0;
            text-decoration: none;
            text-transform: uppercase;
            padding: 10px 25px;
            mso-padding-alt: 0px;
            border-radius: 30px;
