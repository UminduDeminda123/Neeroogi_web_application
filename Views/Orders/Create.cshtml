                                        </div>
                                        <div class="form-group">
                                            <label asp-for="price6" class="control-label"></label>
                                            <input asp-for="price6" class="form-control" />
                                            <span asp-validation-for="price6" class="text-danger"></span>
                                        </div>

                                    </div>*@
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-outline-success float-right" />

                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                                            </div>
                                        </div>
                                        </div>


</form>


                            </div>
                        </div>





                    </div>



                </div>
            </div>
            <div class="row p-5">     </div>
        </center>
        @section Scripts{
            <script>


                $(document).ready(function () {
                    var output = document.getElementById('SignaturePreview');
                    output.src = $("#Signature").val();
                })

                $("#Signature").on("change", function () {
                    var output = document.getElementById('SignaturePreview');
                    output.src = $(this).val();
                })

                //Seal

                $(document).ready(function () {
                    var output = document.getElementById('SealPreview');
                    output.src = $("#Seal").val();
                })

                $("#Seal").on("change", function () {
                    var output = document.getElementById('SealPreview');
                    output.src = $(this).val();
                })
            </script>
        }
        <div class="row p-5">     </div>
        <div class="row p-5">     </div>

    </div>
</body>
</html>