                                                <span asp-validation-for="item6" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <p class="heading">Unit Price</p>

                                                <input asp-for="unitPrice1" class="form-control" />
                                                <span asp-validation-for="unitPrice1" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="unitPrice2" class="form-control" />
                                                <span asp-validation-for="unitPrice2" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="unitPrice3" class="form-control" />
                                                <span asp-validation-for="unitPrice3" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="unitPrice4" class="form-control" />
                                                <span asp-validation-for="unitPrice4" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="unitPrice5" class="form-control" />
                                                <span asp-validation-for="unitPrice5" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="unitPrice6" class="form-control" />
                                                <span asp-validation-for="unitPrice6" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <p class="heading">No. of Units</p>

                                                <input asp-for="numberofUnits1" class="form-control" />
                                                <span asp-validation-for="numberofUnits1" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="numberofUnits2" class="form-control" />
                                                <span asp-validation-for="numberofUnits2" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="numberofUnits3" class="form-control" />
                                                <span asp-validation-for="numberofUnits3" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="numberofUnits4" class="form-control" />
                                                <span asp-validation-for="numberofUnits4" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="numberofUnits5" class="form-control" />
                                                <span asp-validation-for="numberofUnits5" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <input asp-for="numberofUnits6" class="form-control" />
                                                <span asp-validation-for="numberofUnits6" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @*<div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="price1" class="control-label"></label>
                                            <input asp-for="price1" class="form-control" />
                                            <span asp-validation-for="price1" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="price2" class="control-label"></label>
                                            <input asp-for="price2" class="form-control" />
                                            <span asp-validation-for="price2" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="price3" class="control-label"></label>
                                            <input asp-for="price3" class="form-control" />
                                            <span asp-validation-for="price3" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="price4" class="control-label"></label>
